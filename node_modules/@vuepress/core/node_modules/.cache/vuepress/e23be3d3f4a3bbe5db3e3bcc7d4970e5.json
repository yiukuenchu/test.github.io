avatarHeight * 0.5\n    .info-avatar\n      display block\n      width $avatarHeight\n      height $avatarHeight\n      margin 0 auto\n      border 3px solid #fff\n      border-radius 50%\n      box-shadow: 0 0 2px alpha(black, 0.2)\n      transform translateY($headerBgHeight - $avatarHeight * 0.5)\n  .info-card-body\n    cursor default\n    padding 1rem\n    border-bottom 1px solid $borderColor\n    text-align center\n    .info-nickname\n      display block\n      font-size 1.5rem\n      font-weight bold\n      text-align center\n    .info-desc\n      margin 1rem 0\n    .info-contact\n      color $grayTextColor\n      word-break break-all\n      line-height 160%\n      .icon\n        fill $grayTextColor\n  .info-card-footer\n    text-align center\n    padding 1rem\n\n</style>\n"]}]}